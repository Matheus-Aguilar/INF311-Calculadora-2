<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/visor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <LinearLayout
        android:id="@+id/buttonRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/visor">

        <Button
            android:id="@+id/button7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="7"
            android:tag="7"
            android:onClick="clickNumberButton"/>
        <Button
            android:id="@+id/button8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="8"
            android:tag="8"
            android:onClick="clickNumberButton"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="9"
            android:tag="9"
            android:onClick="clickNumberButton"/>
        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="/"
            android:tag="/"
            android:onClick="clickOperatorButton"/>
        <Button
            android:id="@+id/buttonBackSpace"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="<<"
            android:onClick="clickBackSpaceButton"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/buttonRow1"
        app:layout_constraintTop_toBottomOf="@+id/buttonRow1">

        <Button
            android:id="@+id/button4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="4"
            android:tag="4"
            android:onClick="clickNumberButton"/>
        <Button
            android:id="@+id/button5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="5"
            android:tag="5"
            android:onClick="clickNumberButton"/>
        <Button
            android:id="@+id/button6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="6"
            android:tag="6"
            android:onClick="clickNumberButton"/>
        <Button
            android:id="@+id/buttonMult"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="x"
            android:tag="x"
            android:onClick="clickOperatorButton"/>
        <Button
            android:id="@+id/buttonClear"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="C"
            android:onClick="clickClearButton"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/buttonRow1"
        app:layout_constraintTop_toBottomOf="@+id/buttonRow2">

        <Button
            android:id="@+id/button1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="1"
            android:tag="1"
            android:onClick="clickNumberButton"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="2"
            android:tag="2"
            android:onClick="clickNumberButton"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="3"
            android:tag="3"
            android:onClick="clickNumberButton"/>
        <Button
            android:id="@+id/buttonSub"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="-"
            android:tag="-"
            android:onClick="clickOperatorButton"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/buttonRow1"
        app:layout_constraintTop_toBottomOf="@+id/buttonRow3">

        <Button
            android:id="@+id/button0"
            android:layout_width="122dp"
            android:layout_height="60dp"
            android:text="0"
            android:tag="0"
            android:onClick="clickNumberButton"/>
        <Button
            android:id="@+id/buttonPoint"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="."
            android:onClick="clickPointButton"/>
        <Button
            android:id="@+id/buttonSum"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+"
            android:tag="+"
            android:onClick="clickOperatorButton"/>
    </LinearLayout>

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="60dp"
        android:layout_height="122dp"
        android:text="="
        android:onClick="clickEqualButton"
        app:layout_constraintStart_toEndOf="@+id/buttonRow3"
        app:layout_constraintTop_toBottomOf="@+id/buttonRow2"/>

</androidx.constraintlayout.widget.ConstraintLayout>